--创建表表空间前，设置文件路径和数据文件大小

CREATE TABLESPACE "TS_R3DB" DATAFILE 'D:\mydata\TS_R3DB.ORA' SIZE 200M
AUTOEXTEND ON MAXSIZE UNLIMITED;

DROP USER R3DB CASCADE;

CREATE USER R3DB IDENTIFIED BY R3DB DEFAULT TABLESPACE "TS_R3DB"
TEMPORARY TABLESPACE "TEMP" QUOTA UNLIMITED ON "TS_R3DB" QUOTA UNLIMITED ON "TEMP";

GRANT DBA,RESOURCE,CONNECT TO R3DB;
 
ALTER DATABASE RENAME GLOBAL_NAME TO R3DB; 

